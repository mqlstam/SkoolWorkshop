generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
  role     String @default("user")

  sessions Session[]
}

model Session {
  id      String   @id
  created DateTime
  expires DateTime
  ipaddr  String
  userId  Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workshop {
  id   Int    @id @default(autoincrement())
  name String @unique

  items    WorkshopItem[]
  calendar Calendar[]
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  stock       Int
  bufferStock Int     @default(0)
  code        String? @unique
  reusable    Boolean

  workshopItems WorkshopItem[]
}

model WorkshopItem {
  id       Int @id @default(autoincrement())
  people   Int
  quantity Int

  workshopId Int
  productId  Int
  workshop   Workshop @relation(references: [id], fields: [workshopId], onDelete: Cascade)
  product    Product  @relation(references: [id], fields: [productId], onDelete: Cascade)

  @@unique([workshopId, productId])
}

model Calendar {
  id               Int      @id @default(autoincrement())
  participantCount Int
  workshopId       Int
  startDate        DateTime
  endDate          DateTime

  workshop Workshop @relation(fields: [workshopId], references: [id])
}
